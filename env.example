# ===========================================
# EV CHARGING STATION - DEPLOYMENT CONFIG
# ===========================================
# Production Environment Configuration
# Copy this file to .env for deployment

# ===========================================
# API CONFIGURATION
# ===========================================
# Backend API Base URL - PRODUCTION READY
VITE_API_URL=https://evc-backend-tciv.vercel.app/api

# ===========================================
# APPLICATION CONFIGURATION
# ===========================================
# Application Details
VITE_APP_NAME=EV Charging Station
VITE_APP_VERSION=1.0.0
VITE_APP_ENVIRONMENT=production

# Frontend URL - UPDATE FOR PRODUCTION
VITE_FRONTEND_URL=http://localhost:5173

# ===========================================
# GOOGLE OAUTH CONFIGURATION
# ===========================================
# Google OAuth Client ID
# Get from: https://console.developers.google.com/
# Uncomment and add your Google Client ID to enable Google OAuth
# VITE_GOOGLE_CLIENT_ID=your_google_client_id_here.apps.googleusercontent.com

# ===========================================
# DEPLOYMENT CONFIGURATION
# ===========================================
# Build Configuration
VITE_BUILD_MODE=production
VITE_SOURCEMAP=false

# Performance Configuration
VITE_CHUNK_SIZE_WARNING_LIMIT=1000

# ===========================================
# SECURITY CONFIGURATION
# ===========================================
# Enable/Disable Features
VITE_ENABLE_DEVTOOLS=false
VITE_ENABLE_CONSOLE_LOGS=false

# ===========================================
# DEPLOYMENT INSTRUCTIONS
# ===========================================
# 1. Copy this file to .env
# 2. Update VITE_API_URL to your production backend URL
# 3. Update VITE_FRONTEND_URL to your production frontend URL
# 4. Add your Google Client ID if using Google OAuth
# 5. Run 'npm run build' to create production build
# 6. Deploy the 'dist' folder to your hosting service